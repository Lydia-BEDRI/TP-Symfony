{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block content %}
    <div class="min-h-screen bg-gray-100 py-10">
        <div class="max-w-7xl mx-auto px-4">
            <h1 class="text-3xl font-bold text-gray-700 text-center mb-8">Gestion des Utilisateurs</h1>

            <!-- Bouton Ajouter un Utilisateur -->
            <div class="text-center mb-6">
                <a href="#" class="bg-orange-600 text-white py-3 px-6 rounded-md text-lg hover:bg-orange-500 transition duration-300 flex items-center justify-center">
                    <i class="fas fa-plus mr-2"></i> Ajouter un Utilisateur
                </a>
            </div>

            <!-- Tableau des Utilisateurs -->
            <div class="overflow-x-auto bg-white shadow-lg rounded-lg p-6">
                <table class="min-w-full table-auto">
                    <thead class="bg-gray-200">
                    <tr>
                        <th class="px-4 py-2 text-left">ID</th>
                        <th class="px-4 py-2 text-left">Nom</th>
                        <th class="px-4 py-2 text-left">Email</th>
                        <th class="px-4 py-2 text-left">Rôle</th>
                        <th class="px-4 py-2 text-left">Téléphone</th>
                        <th class="px-4 py-2 text-left">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- Exemple d'utilisateur -->
                    <tr>
                        <td class="px-4 py-2">1</td>
                        <td class="px-4 py-2">John Doe</td>
                        <td class="px-4 py-2">john.doe@example.com</td>
                        <td class="px-4 py-2">Utilisateur</td>
                        <td class="px-4 py-2">+123456789</td>
                        <td class="px-4 py-2">
                            <a href="#" class="text-blue-600 hover:text-blue-500 mr-4">
                                <i class="fas fa-pencil-alt"></i> Modifier
                            </a>
                            <a href="#" class="text-yellow-600 hover:text-yellow-500 mr-4">
                                <i class="fas fa-key"></i> Réinitialiser Mot de Passe
                            </a>
                            <a href="#" class="text-red-600 hover:text-red-500">
                                <i class="fas fa-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                    <!-- Exemple d'utilisateur -->
                    <tr>
                        <td class="px-4 py-2">2</td>
                        <td class="px-4 py-2">Jane Smith</td>
                        <td class="px-4 py-2">jane.smith@example.com</td>
                        <td class="px-4 py-2">Admin</td>
                        <td class="px-4 py-2">+987654321</td>
                        <td class="px-4 py-2">
                            <a href="#" class="text-blue-600 hover:text-blue-500 mr-4">
                                <i class="fas fa-pencil-alt"></i> Modifier
                            </a>
                            <a href="#" class="text-yellow-600 hover:text-yellow-500 mr-4">
                                <i class="fas fa-key"></i> Réinitialiser Mot de Passe
                            </a>
                            <a href="#" class="text-red-600 hover:text-red-500">
                                <i class="fas fa-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

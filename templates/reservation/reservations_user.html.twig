{% extends 'base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block content %}
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-semibold text-gray-800 mb-6">Mes Réservations</h2>

        {% if reservations is not empty %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for reservation in reservations %}
                    <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                        <div class="relative">
                            <img src="{{ reservation.restaurant.imageUrl }}" alt="Image du restaurant" class="w-full h-48 object-cover">
                            <div class="absolute top-0 left-0 p-4 bg-black bg-opacity-50 text-white w-full">
                                <h3 class="text-xl text-center font-semibold">Restaurant {{ reservation.restaurant.name }}</h3>
                            </div>
                        </div>

                        <div class="p-6">
                            <div class="text-lg mb-4">
                                <p><strong>Restaurant :</strong> {{ reservation.restaurant.name }}</p>
                                <p><strong>Réservation pour :</strong> {{ reservation.user.firstName }} {{ reservation.user.lastName }}</p>
                                <p><strong>Table :</strong> n° {{ reservation.tableReserved.number }} ({{ reservation.tableReserved.capacity }} personne(s))</p>
                                <p><strong>Date et Heure :</strong> {{ reservation.reservationDateTime|date('d/m/Y H:i') }}</p>
                            </div>

                            <div class="flex justify-between items-center mt-4">
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-lg text-gray-600">Vous n'avez aucune réservation.</p>
        {% endif %}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Résumé de la réservation{% endblock %}

{% block content %}
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
        <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Résumé de la réservation</h1>

        <div class="text-lg text-gray-700 mb-6">
            <p><strong>Restaurant :</strong> {{ reservation.restaurant.name }}</p>
            <p><strong>Table :</strong> {{ reservation.tableReserved.capacity }} personnes</p>
            <p><strong>Date et Heure de la réservation :</strong> {{ reservation.reservationDateTime|date('Y-m-d H:i') }}</p>
            <p><strong>Montant Total :</strong> XX €</p>
        </div>

        <div class="text-center">
            <a href="{{ path('reservation_page', { restaurantId: reservation.restaurant.id }) }}"
               class="inline-block px-6 py-2 text-white bg-green-500 hover:bg-green-600 rounded-lg text-lg">
                Retour à la page de réservation
            </a>
        </div>
    </div>
{% endblock %}

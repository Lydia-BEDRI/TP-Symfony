{% extends 'base.html.twig' %}

{% block title %}Gestion des Menus{% endblock %}

{% block content %}
    <div class="min-h-screen bg-gray-100 py-10">
        <div class="max-w-7xl mx-auto px-4">
            <h1 class="text-3xl font-bold text-gray-700 text-center mb-8">Gestion des Menus</h1>

            <!-- Bouton Ajouter un Menu -->
            <div class="text-center mb-6">
                <a href="#" class="bg-orange-600 text-white py-3 px-6 rounded-md text-lg hover:bg-orange-500 transition duration-300 flex items-center justify-center">
                    <i class="fas fa-plus mr-2"></i> Ajouter un Menu
                </a>
            </div>

            <!-- Tableau des Menus -->
            <div class="overflow-x-auto bg-white shadow-lg rounded-lg p-6">
                <table class="min-w-full table-auto">
                    <thead class="bg-gray-200">
                    <tr>
                        <th class="px-4 py-2 text-left">ID</th>
                        <th class="px-4 py-2 text-left">Restaurant</th>
                        <th class="px-4 py-2 text-left">Nom</th>
                        <th class="px-4 py-2 text-left">Description</th>
                        <th class="px-4 py-2 text-left">Prix</th>
                        <th class="px-4 py-2 text-left">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="px-4 py-2">1</td>
                        <td class="px-4 py-2">Restaurant A</td>
                        <td class="px-4 py-2">Menu 1</td>
                        <td class="px-4 py-2">Menu végétarien avec des options bio.</td>
                        <td class="px-4 py-2">20€</td>
                        <td class="px-4 py-2">
                            <a href="#" class="text-blue-600 hover:text-blue-500 mr-4">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="#" class="text-yellow-600 hover:text-yellow-500 mr-4">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="#" class="text-red-600 hover:text-red-500">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="px-4 py-2">2</td>
                        <td class="px-4 py-2">Restaurant B</td>
                        <td class="px-4 py-2">Menu 2</td>
                        <td class="px-4 py-2">Menu à base de fruits de mer et poissons frais.</td>
                        <td class="px-4 py-2">35€</td>
                        <td class="px-4 py-2">
                            <a href="#" class="text-blue-600 hover:text-blue-500 mr-4">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="#" class="text-yellow-600 hover:text-yellow-500 mr-4">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="#" class="text-red-600 hover:text-red-500">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="px-4 py-2">3</td>
                        <td class="px-4 py-2">Restaurant C</td>
                        <td class="px-4 py-2">Menu 3</td>
                        <td class="px-4 py-2">Menu à emporter avec des options rapides.</td>
                        <td class="px-4 py-2">15€</td>
                        <td class="px-4 py-2">
                            <a href="#" class="text-blue-600 hover:text-blue-500 mr-4">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="#" class="text-yellow-600 hover:text-yellow-500 mr-4">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="#" class="text-red-600 hover:text-red-500">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
